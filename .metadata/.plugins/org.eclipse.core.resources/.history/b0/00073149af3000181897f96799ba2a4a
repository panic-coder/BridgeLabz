
public class PatternDiamond {
	public static void main(String[] args) {
		int n=7,sp=n/2,st=1,i;
		for(i=1;i<=n;i++) {
			for(int j=1;j<=sp;j++) {
				System.out.println(" ");
			}
			for(int j=1;j<=st;j++) {
				System.out.println("*");
			}
			System.out.println();
			if(i<=n/2) {
				sp=sp-1;
				st=st+2;
			}
			else {
				sp=sp+1;
				st=st-1;
			}
				
		}
	}
}
