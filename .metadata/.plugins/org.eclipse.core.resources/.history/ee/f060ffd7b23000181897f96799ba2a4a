
public class PatternDiamond {
	public static void main(String[] args) {
		int n=7,sp=n/2,st=1,i,z=1,x=2;
		for(i=1;i<=n;i++) {
			for(int j=1;j<=sp;j++) {
				System.out.print(" ");
			}
			for(int j=st;j>=1;j--) {
				
				if(j==1 || j==st)
					System.out.print("*");
				else if(j/2!=0 && j==i) {
					System.out.print(z);
					z++;
				}
				else if((i-st)==0 || i-st==x  ) /*&& j%2!=0)*/ {
					//System.out.print(z);
					x=x+2;
					z++;
				}
				else  
					System.out.print(" ");
				
					
			}
			System.out.println();
			if(i<=n/2) {
				sp=sp-1;
				st=st+2;
			}
			else {
				sp=sp+1;
				st=st-2;
				System.out.println(st);
			}
				
		}
	}
}
